{% comment %}
  {{ 'dummy-section.css' | asset_url | stylesheet_tag }}
  <script src='{{ 'dummy-section.js' | asset_url }}' defer></script>
{% endcomment %}

{% liquid
  assign id = section.id
  assign padding_bottom = section.settings.padding_bottom
  assign padding_top = section.settings.padding_top
  assign wrapper = 'dummy-section-wrapper-' | append: id
  assign condition = true
%}

<style>
  .{{wrapper}} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
  }
</style>

{% if condition %} <a href='{{'/collections/all'}}'> {% else %}<div class='{{wrapper}}'>{% endif %}
    <div class='dummy-section-wrapper text-black'>Vikram</div>
{% if condition %} </a> {% else %}</div>{% endif %}

{% schema %}
{
  "name": "dummy-section",
  "class": "dummy-section",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Padding settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 10
    }
  ],
  "presets": [{ "name": "dummy-section" }]
}
{% endschema %}
