{% comment %} {{ 'featured-collection.css' | asset_url | stylesheet_tag }} {% endcomment %}
{% comment %} <script src='{{ 'featured-collection.js' | asset_url }}' defer></script> {% endcomment %}

{% liquid
  assign id = section.id
  assign padding_bottom = section.settings.padding_bottom
  assign padding_top = section.settings.padding_top
  assign wrapper = 'featured-collection-wrapper-' | append: id
%}

<style>
  .{{wrapper}} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
  }
</style>

<div class='{{wrapper}}'>
  <div class='featured-collection-wrapper'>
    {% content_for 'blocks' %}
  </div>
</div>

{% schema %}
{
  "name": "featured-collection",
  "blocks": [{ "type": "@theme" }],
  "class": "featured-collection",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Padding settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 10
    }
  ],
  "presets": [{ "name": "Featured collection" }]
}
{% endschema %}
