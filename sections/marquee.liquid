{% liquid
  assign id = section.id
  assign padding_bottom = section.settings.padding_bottom
  assign padding_top = section.settings.padding_top
  assign wrapper = 'marquee-wrapper-' | append: id
  assign icon_position = section.settings.icon_position
  assign icon_padding = section.settings.icon_padding
  assign icon_size = section.settings.icon_size
  assign section_icon = section.settings.section_icon
  assign font_size = section.settings.text_size
%}

<style>
  .{{ wrapper }} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    background-color: {{ section.settings.colors.settings.background }};
    color: {{ section.settings.colors.settings.text }};
    font-size: {{ font_size }}px;
  }

  @media screen and (max-width:768px) {
    .{{ wrapper }} {
      padding-top: {{ padding_top | times: 0.75 }}px;
      padding-bottom: {{ padding_bottom | times: 0.75 }}px;
      font-size: {{ font_size | times: 0.5 }}px;
    }
  }
  .{{wrapper}} .text-styles{
    padding-{{ icon_position }}: {{ icon_padding }}px;
  }

  splider-component.splide .splide__arrows .splide__arrow svg {
    color: {{ section.settings.colors.settings.text }};
  }
</style>

{% capture splide_options %}
  {
    "type": "loop",
    "pagination": false,
    "arrows": false,
    "autoWidth" : true,
    "autoStart": true,
    "gap":"{{ section.settings.gap }}px",
    "autoScroll": {
      "speed": {{ section.settings.auto_scroll_speed }}
    }
  }
{% endcapture %}

<div class='{{ wrapper }} max-w-screen background-color'>
  <div class='marquee background-color text-color'>
    <splider-component
      data-auto-scroll='true'
      data-options='{{ splide_options }}'
      class='splide'
    >
      <div class='splide__track'>
        <ul class='splide__list'>
          {% for block in section.blocks %}
            {% liquid
              assign text_content = block.settings.text | replace: '<p', '<p class="text-center text-styles"'
              assign icon = blank
              assign block_icon = block.settings.block_icon

              if block_icon != blank
                assign icon = block_icon | image_url: width: icon_size, height: icon_size | image_tag
              else
                assign icon = section_icon | image_url: width: icon_size, height: icon_size | image_tag
              endif
            %}

            <li class='splide__slide flex items-center justify-center'>
              {% if section.settings.icon_position == 'left' %}
                {{ icon }}
              {% endif %}
              {{ text_content }}
              {% if section.settings.icon_position == 'right' %}
                {{ icon }}
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    </splider-component>
  </div>
</div>

{% schema %}
{
  "name": "Marquee",
  "class": "marquee",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap",
      "min": 5,
      "max": 100,
      "default": 5,
      "step": 1
    },
    {
      "type": "range",
      "id": "auto_scroll_speed",
      "label": "Auto scroll speed",
      "min": 0.1,
      "max": 5,
      "default": 1,
      "step": 0.1
    },
    { "type": "header", "content": "Text" },
    {
      "type": "range",
      "id": "text_size",
      "min": 8,
      "max": 100,
      "step": 1,
      "label": "Size",
      "default": 20,
      "unit": "px"
    },

    { "type": "header", "content": "Icon" },
    {
      "type": "image_picker",
      "id": "section_icon",
      "label": "image"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 10,
      "max": 100,
      "step": 1,
      "label": "Size",
      "default": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "icon_padding",
      "min": 0,
      "max": 50,
      "step": 1,
      "label": "Padding",
      "default": 0,
      "unit": "px"
    },
    {
      "label": "Position",
      "id": "icon_position",
      "type": "select",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Padding settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 10
    },
    {
      "type": "color_scheme",
      "id": "colors",
      "label": "Color scheme",
      "default": "accent"
    }
  ],
  "blocks": [
    {
      "type": "Text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "block_icon",
          "label": "Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee"
    }
  ]
}
{% endschema %}
